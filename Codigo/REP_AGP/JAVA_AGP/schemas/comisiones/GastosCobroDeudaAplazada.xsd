<?xml version="1.0" encoding="UTF-8"?>
<x:schema targetNamespace="http://www.agroseguro.es/Recibos/GastosCobroDeudaAplazada" 
xmlns="http://www.agroseguro.es/Recibos/GastosCobroDeudaAplazada" 
xmlns:ti="http://www.agroseguro.es/ITipos" 
xmlns:x="http://www.w3.org/2001/XMLSchema">

	<!-- Importacion de la definicion de tipos genericos -->
	<x:import namespace="http://www.agroseguro.es/ITipos" schemaLocation="../commons/Tipos.xsd" />

	<x:element name="Fases" type="Fases"/>
	
	<x:complexType name="Fases">
		<x:sequence>
			<x:element maxOccurs="unbounded" minOccurs="1" name="FaseAbono" type="FaseAbono"/>
		</x:sequence>
	</x:complexType>
	
	<x:complexType name="FaseAbono">
		<x:sequence>
			<x:choice maxOccurs="unbounded" minOccurs="1"> 
				<x:element maxOccurs="unbounded" minOccurs="1" name="Individual" type="Individual"/>
				<x:element maxOccurs="unbounded" minOccurs="1" name="Colectivo" type="Colectivo"/>
			</x:choice>
		</x:sequence>
		<x:attribute name="plan" type="ti:Plan" use="required"/>
		<x:attribute name="fase" type="ti:Fase_Codigo" use="required"/>
	</x:complexType>
	
	
	<x:group name="NombrePersona">
		<x:choice>
			<x:element maxOccurs="1" minOccurs="1" name="NombreApellidos" type="ti:NombreApellidos"/>
			<x:element maxOccurs="1" minOccurs="1" name="RazonSocial" type="ti:RazonSocial"/>
		</x:choice>
	</x:group>
	
	<x:complexType name="Individual"> 
		<x:sequence>
			<x:group maxOccurs="1" minOccurs="1" ref="NombrePersona"/>
			<x:element maxOccurs="unbounded" minOccurs="1" name="Aplicacion" type="Aplicacion"/>
		</x:sequence>
	</x:complexType>
	

	<x:complexType name="Colectivo">
		<x:sequence>
			<x:group maxOccurs="1" minOccurs="1" ref="NombrePersona"/>
			<x:element maxOccurs="unbounded" minOccurs="1" name="Aplicacion" type="Aplicacion"/>
		</x:sequence>
		<x:attribute name="referencia" type="ti:Colectivo_Referencia" use="required"/>
		<x:attribute name="digitoControl" type="ti:DigitoControl" use="required"/>
		<x:attribute name="codigoInterno" type="ti:CodigoInternoEntidad" use="required"/>
	</x:complexType>
	
	<x:complexType name="Aplicacion">
		<x:sequence>
			<x:group maxOccurs="1" minOccurs="1" ref="NombrePersona"/>
			<x:element maxOccurs="unbounded" minOccurs="1" name="Recibo" type="Recibo"/>
		</x:sequence>
		<x:attribute name="referencia" type="ti:Poliza_Referencia" use="required"/>
		<x:attribute name="digitoControl" type="ti:DigitoControl" use="required"/>
		<x:attribute name="anuladaRefundida" type="ti:Aplicacion_AnuladaRefundida" use="required"/>
		<x:attribute name="tipo" type="ti:Poliza_Referencia_Tipo" use="required"/>
		<x:attribute name="linea" type="ti:Linea_Codigo" use="required"/>
		<x:attribute name="codigoInterno" type="ti:CodigoInternoEntidad" use="required"/>
	</x:complexType>
	
	<x:complexType name="Recibo">
		<x:sequence>
			<x:element maxOccurs="unbounded" minOccurs="1" name="GrupoNegocio" type="GrupoNegocio"/>
		</x:sequence>
		<x:attribute name="recibo" type="ti:Recibo_Codigo" use="required"/>
		<x:attribute name="tipo" type="ti:Entero3Posiciones" use="required"/>	
	</x:complexType>
	
	<x:complexType name="GrupoNegocio">
		<x:sequence>
			<x:element maxOccurs="1" minOccurs="1" name="GastosDevengados" type="ComisionesGastos"/>
			<x:element maxOccurs="unbounded" minOccurs="1" name="GastosAbonar" type="GastosAbonar"/>
		</x:sequence>
		<x:attribute name="grupoNegocio" type="ti:GrupoNegocio" use="required"/>
		<x:attribute name="primaComercialNeta" type="ti:ImporteLargo" use="required"/>	
	</x:complexType>
		
	<x:complexType name="ComisionesGastos">
		<x:attribute name="gastosAdminEntidad" type="ti:ImporteLargo" use="required"/>
		<x:attribute name="gastosAdqEntidad" type="ti:ImporteLargo" use="required"/>
		<x:attribute name="comisionesMediador" type="ti:ImporteLargo" use="required"/>
	</x:complexType>
	
	<x:complexType name="GastosAbonar">
		<x:complexContent>
			<x:extension base="ComisionesGastos">
				<x:attribute name="recibo" type="ti:Recibo_Codigo" use="required"/>
				<x:attribute name="plazoDomiciliacion" type="ti:PeriodoFraccionamiento" use="optional"/>
			</x:extension>
		</x:complexContent>
	</x:complexType>

</x:schema>