<?xml version="1.0" encoding="UTF-8"?>
<x:schema 
	targetNamespace="http://www.agroseguro.es/SeguroAgrario/InformacionActas"
	xmlns="http://www.agroseguro.es/SeguroAgrario/InformacionActas"
	xmlns:pks="http://www.agroseguro.es/SeguroAgrario/InformacionActas"
	xmlns:x="http://www.w3.org/2001/XMLSchema"
	xmlns:ti="http://www.agroseguro.es/Tipos" 
> 

	<!-- Importacion de la definicion de tipos genericos -->
	<x:import
		namespace="http://www.agroseguro.es/Tipos"
		schemaLocation="Tipos.xsd" />
	
	<x:element name="ListaActas" type="Actas" >
		<x:annotation>
			<x:documentation>
				Elemento Raiz
			</x:documentation>
		</x:annotation>
	</x:element>
	
	<x:complexType name="Actas">
		<x:sequence>
            <x:element name="Acta" type="InformacionActa" minOccurs="1" maxOccurs="unbounded" />		
        </x:sequence>
		<x:attribute name="plan" type="ti:Plan"/>
		<x:attribute name="referencia" type="ti:Poliza_Referencia_Creciente" />
		<x:attribute name="nif" type="ti:NIFCIF" />
	</x:complexType>
		
	<x:complexType name="InformacionActa">
		<x:attribute name="serie" type="ti:Serie" use="required" />
		<x:attribute name="numeroActa" type="ti:Acta_Numero" use="required" />
		<x:attribute name="fechaActa" type="x:date" use="required"/>
		<x:attribute name="situacion" type="x:string" use="required"/>
		<x:attribute name="situacionDescriptivo" type="x:string" use="required"/>
		<x:attribute name="importe" type="ti:ImporteLargo" use="required"/>
		<x:attribute name="importeADevolverPorAsegurado" type="ti:ImporteLargo" use="optional"/>
		<x:attribute name="fechaPago" type="x:date" use="optional"/>
	</x:complexType>	
	
</x:schema>