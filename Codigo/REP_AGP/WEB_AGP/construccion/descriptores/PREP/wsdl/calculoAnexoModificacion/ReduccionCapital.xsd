				</x:key>
			</x:element>
		</x:sequence>
		<x:attribute name="hoja" type="ti:Parcela_Hoja" use="required"/>
		<x:attribute name="numero" type="ti:Parcela_Numero" use="required"/>
	</x:complexType>
	
