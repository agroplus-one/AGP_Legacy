		<x:attribute name="modulo" type="ti:Cobertura_Modulo" use="required"/>
	</x:complexType>

	<x:complexType name="ObjetosAsegurados">
		<x:sequence>
			<x:element maxOccurs="unbounded" minOccurs="1" name="Parcela" type="ParcelaReducida"/>
		</x:sequence>
	</x:complexType>
	
	<x:complexType name="ParcelaReducida">
		<x:sequence>
			<x:element maxOccurs="1" minOccurs="1" name="CapitalesAsegurados" type="CapitalesAsegurados">
				<x:key name="CapitalAsegurado_PK">
					<x:selector xpath="CapitalAsegurado"/>
