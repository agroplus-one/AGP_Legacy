<?xml version="1.0" encoding="UTF-8"?><x:schema xmlns:x="http://www.w3.org/2001/XMLSchema" targetNamespace="http://www.agroseguro.es/SeguroAgrario/Contratacion/ReduccionCapital" xmlns="http://www.agroseguro.es/SeguroAgrario/Contratacion/ReduccionCapital" xmlns:ti="http://www.agroseguro.es/Tipos">

	<x:import namespace="http://www.agroseguro.es/Tipos" schemaLocation="Tipos.xsd"/>

	<x:element name="PolizaReduccionCapital" type="PolizaReduccionCapital"/>
	
